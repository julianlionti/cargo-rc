generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cargo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  origin      String
  destination String
  weight      Float
  company     String

  assignedTo   Driver? @relation(fields: [assignedToId], references: [id])
  assignedToId String? @db.ObjectId
}

model Driver {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String  @unique
  assignedCargos Cargo[]
}
